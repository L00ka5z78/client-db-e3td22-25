<div class="container">
<h2 class="gray-header">{{client.name}}</h2>
</div>

<div class="container one-customer">
<table class="header-of-left">
    <tbody>
    <tr>
        <th>
            E-mail:
        </th>
        <td>
            <a href="mailto:{{client.mail}}" target="_blank">{{client.mail}}</a>
        </td>

    </tr>
    <tr>
        <th>
            Name:
        </th>
        <td>
            {{client.name}}
        </td>
    </tr>
    <tr>
        <th>
            Next contact at:
        </th>
        <td>
            {{client.nextContactAt}}
        </td>
    </tr>
    {{#if client.notes}}
        <tr>
            <th>
                Notes:
            </th>
            <td>
                {{client.notes}}
            </td>
        </tr>
    {{/if}}
    </tbody>
</table>
</div>