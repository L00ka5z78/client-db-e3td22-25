<div class="container">
<h2 class="gray-header">Customers list</h2>

<table>
    <thead>

    <tr>
        <th>
            E-mail:
        </th>
        <th>
            Name:
        </th>

        <th>
            Next contact date:
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each clients}}
        <tr>
            <th>
                <a href="mailto:{{this.mail}}" target="_blank">{{this.mail}}</a>
            </th>
            <td>
                <a href="/client/{{this.id}}">{{this.name}}</a>
            </td>
            <td>
                {{this.nextContactAt}}
            </td>
            <td>
                <a href="/client/{{this.id}}">Details</a>
                <form method="POST" action="/client/{{this.id}}?_method=DELETE">
                    <button type="submit">Delete</button></form>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
  <p>
    <form method="GET" action="/client/form/add">
        <button type="submit">Add new Client</button>
    </form>
  </p>
</div>